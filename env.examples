# Example Environment Configurations for Aero Dashboard

# ===========================================
# BASIC CONFIGURATION (Development)
# ===========================================
VITE_REFRESH_RUN=false
VITE_USE_MOCK_DATA=true
VITE_MOCK_DATA_TYPE=all
VITE_ENABLE_LOGGING=true

